@using System.Activities.Statements
@using System.Globalization
@using FindTech.Entities.Models.Enums
@using FindTech.Web.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var article = (ArticleViewModel) ViewBag.Article;
    var articles = (IEnumerable<ArticleViewModel>)ViewBag.Articles;
    ViewBag.Title = article.Title;
    ViewBag.Discription = article.Description;
}
<div class="container">
    <div class="breadcrumb-box">
        <ul class="breadcrumb">
            <li><a href="index.html">Home</a> </li>
            <li><a href="/blog-view.html">Our Blog</a> </li>
            <li class="active">Excepteur Sint Occaecat</li>
        </ul>
    </div><!-- .breadcrumb-box -->
</div>
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-51a2fc0f2f4412f7" async="async"></script>
<section id="article">
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="col-sm-12 col-md-9">
                    <header class="page-header">
                        <div class="container-fluid">
                                <div class="row">
                                    @if (article != null)
                                    {
                                        <h1 class="title">@article.Title</h1>
                                        <div class="entry-meta">
                                            <div class="posted-info"><span class="blurry-text">Đăng:</span><strong> @article.PublishedDate.ToString("dd MMM yy HH:mm:ss", new CultureInfo("vi-VN"))<span class="separator">|</span><span class="blurry-text">Bởi:</span> @article.CreatedUserDisplayName</strong></div>
                                            <span class="meta btn-icon tags">
                                                <span class="blurry-text">Nhãn:</span>
                                                @if (article.Tags != null)
                                                {
                                                    foreach (var tag in article.Tags.Split(','))
                                                    {
                                                        <a href="#">@tag</a>
                                                    }
                                                }
                                                else
                                                {
                                                    foreach (var tag in article.SeoTitle.Split('-'))
                                                    {
                                                        <a href="#">@tag</a>
                                                    }
                                                }
                                            </span>
                                            <span class="go-to-page pull-right"><i class="fa fa-bars"></i>Đi đến trang</span>
                                            <div class="list-group">
                                                <a href="#" class="list-group-item"><i class="fa fa-chevron-circle-right"></i>Giới thiệu</a>
                                                <a href="#" class="list-group-item"><i class="fa fa-chevron-circle-right"></i>Màn hình và camera</a>
                                                <a href="#" class="list-group-item"><i class="fa fa-chevron-circle-right"></i>Tính năng</a>
                                                <a href="#" class="list-group-item"><i class="fa fa-chevron-circle-right"></i>Pin và bộ nhớ</a>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <h1 class="title">Không tìm thấy bài viết</h1>
                                    }
                                </div>
                        </div>
                    </header>
                    <div class="content blog blog-post">
                        <article class="post">
                            <div class="entry-content">
                                @Html.Raw(article.Content)
                                @foreach (var contentSection in article.ContentSections)
                                {
                                    <section class="content-section">
                                        <h4 class="title">@contentSection.SectionTitle</h4>
                                        <i class="description">@Html.Raw(contentSection.SectionDescription)</i>
                                        <span class="content">@Html.Raw(contentSection.SectionContent)</span>
                                    </section>
                                }
                            </div>
                            <div class="opinion">
                                <span class="title">Đánh giá bài viết: </span>
                                <a href="#" class="background-success-hover">Tuyệt</a>
                                <a href="#" class="background-primary-hover">Hay</a>
                                <a href="#" class="background-warning-hover">Tạm</a>
                                <a href="#" class="background-danger-hover">Dở</a>
                            </div>
                            <div class="article-footer">
                                <div class="addthis_sharing_toolbox"></div>
                                <div class="social">
                                    <a class="fa fa-share-alt" id="zclip" href="@Url.Action("Detail", "Article", new { seoCategoryName = article.ArticleSeoCategoryName, seoTitle = article.SeoTitle }, this.Request.Url.Scheme)"></a>
                                </div>
                                <div class="link">
                                    <input type="text" readonly="readonly" placeholder="Link" onclick="$(this).select();" value="@Url.Action("Detail", "Article", new { seoCategoryName = article.ArticleSeoCategoryName, seoTitle = article.SeoTitle }, this.Request.Url.Scheme)">
                                </div>
                                <div class="addthis_native_toolbox"></div>
                                <div class="source">
                                    <span class="blurry-text">Tác giả: </span><strong>@article.Author</strong><br />
                                    <span class="blurry-text">Nguồn: </span><strong>@article.SourceName</strong>
                                </div>
                            </div>
                            <div class="article-paging">
                                <a href="#" class="next-page"><strong>Trang kế</strong> <i class="fa fa-chevron-right"></i> Màn hình và camera</a>
                                <div class="pagination-box pull-right">
                                    <ul class="pagination">
                                        <li class="disabled"><a href="#"><i class="fa fa-angle-left"></i></a></li>
                                        <li class="active"><span>1</span></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li class="disabled"><a href="#">...</a></li>
                                        <li><a href="#">9</a></li>
                                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </article><!-- .post -->
                        @{Html.RenderPartial("_MiniSliderBox", new ArticleListViewModel { Articles = articles, Title = "Thủ thuật" });}
                        <h3 class="title slim">Comments</h3>
                        <ul class="commentlist">
