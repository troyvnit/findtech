@using FindTech.Entities.Models
@using FindTech.Entities.Models.Enums
@using FindTech.Web.Models
@{
    ViewBag.Title = "Home Page";
    var articles = (IEnumerable<ArticleViewModel>)ViewBag.Articles;
}

<div class="banner-set load">
    <div class="container">
        <div class="banners">
            @foreach (var article in articles.Skip(11))
            {
                <a href="#" class="banner">
                    <div class="box">
                        <img src="@article.Avatar" width="253" height="253" alt="">
                        <div class="overlay">
                            <h2 class="title">@article.Title</h2>
                            <div class="description">@article.Description</div>
                        </div>
                    </div>
                </a>
            }
        </div><!-- .banners -->
        <div class="clearfix"></div>
    </div>
    <div class="nav-box">
        <div class="container">
            <a class="prev" href="#"><span class="glyphicon glyphicon-arrow-left"></span></a>
            <a class="next" href="#"><span class="glyphicon glyphicon-arrow-right"></span></a>
        </div>
    </div>
</div><!-- .banner-set -->
<section id="main">
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="col-sm-9 col-md-9">
                    <article class="content">
                        <div class="carousel-box bottom-padding bottom-padding-mid load overflow">
                            <div class="title-box no-margin">
                                <a class="next" href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="9px" height="16px" viewBox="0 0 9 16" enable-background="new 0 0 9 16" xml:space="preserve">
                                    <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#fcfcfc" points="1,0.001 0,1.001 7,8 0,14.999 1,15.999 9,8 "></polygon>
                                        </svg>
                                </a>
                                <a class="prev" href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="9px" height="16px" viewBox="0 0 9 16" enable-background="new 0 0 9 16" xml:space="preserve">
                                    <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#fcfcfc" points="8,15.999 9,14.999 2,8 9,1.001 8,0.001 0,8 "></polygon>
                                        </svg>
                                </a>
                                <h2 class="title">Đánh giá & So sánh</h2>
                            </div>

                            <div class="clearfix"></div>

                            <div class="row">
                                <div class="carousel articles">
                                    @foreach (var article in articles.Skip(15))
                                    {
                                        <div class="col-sm-3 col-md-3">
                                            <div class="article">
                                                <div class="default">
                                                    <a href="shop-product-view.html" class="article-avatar fixed-height-270">
                                                        <img src="@article.Avatar" alt="" title="" width="270" height="270">
                                                    </a>
                                                    <div class="article-description">
                                                        <h2 class="title">@article.Title</h2>
                                                        <div class="posted-info"><span class="blurry-text">Posted:</span><strong> 19 thang 12 nam 2014, by Troy</strong></div>
                                                        <div class="description blurry-text">@article.Description</div>
                                                    </div>
                                                    <div class="social">
                                                        <span class="icon-facebook"><span class="count">25</span></span>
                                                        <span class="icon-twitter"><span class="count">30</span></span>
                                                        <span class="icon-gplus"><span class="count">11</span></span>
                                                        <span class="fa fa-comments"><span class="count">12</span></span>
                                                    </div>
                                                </div>
                                            </div><!-- .article -->
                                        </div>
                                    }
                                </div>
                            </div>
                        </div><!-- .carousel-box -->
                    </article>
                    <article class="content">
                        <div class="bottom-padding bottom-padding-mid load overflow">
                            <div class="title-box no-margin">
                                <h2 class="title">Tin Tức</h2>
                            </div>

                            <div class="clearfix"></div>

                            <div class="row social-feed articles">
                                @foreach (var article in articles)
                                {
                                    <div class="col-sm-3 col-md-3 isotope-item item-clone">
                                        <div class="article">
                                            <div class="default">
                                                <a href="shop-product-view.html" class="article-avatar">
                                                    <img src="@article.Avatar" alt="" title="" width="270" height="270">
                                                </a>
                                                <div class="article-description">
                                                    <h2 class="title">@article.Title</h2>
                                                    <div class="posted-info"><span class="blurry-text">Posted:</span><strong> 19 thang 12 nam 2014, by Troy</strong></div>
                                                    <div class="description blurry-text">@article.Description</div>
                                                </div>
                                                <div class="social">
                                                    <span class="icon-facebook"><span class="count">25</span></span>
                                                    <span class="icon-twitter"><span class="count">30</span></span>
                                                    <span class="icon-gplus"><span class="count">11</span></span>
                                                    <span class="fa fa-comments"><span class="count">12</span></span>
                                                </div>
                                            </div>
                                        </div><!-- .article -->
                                    </div>
                                }
                            </div>

                        </div><!-- .carousel-box -->
                    </article>
                    <article class="content">
                        <div class="bottom-padding bottom-padding-mid">
                            <div class="title-box">
                                <h2 class="title">YouTube</h2>
                            </div>
                            <div class="video-box youtube">
                                <iframe frameborder="0" allowfullscreen="" src="//www.youtube.com/embed/oNBBijn4JuY?showinfo=0&amp;wmode=opaque"></iframe>
                            </div>
                        </div>
                    </article>
                </div>
                <div class="sidebar col-sm-3 col-md-3">
                    <aside class="widget articles">
                        <div class="title-box">
                            <span class="fa fa-eye"></span><h2 class="title">Đánh giá mới nhất</h2>
                        </div>
                        <ul>
                            @foreach (var article in articles.Take(4))
                            {
                                <li class="clearfix">
                                    <a href="shop-product-view.html" class="article-avatar">
                                        <img src="@article.Avatar" width="72" height="72" alt="" title="">
                                    </a>
                                    <h2 class="title">
                                        @article.Title
                                    </h2>
                                </li>
                            }
                            <li class="action">
                                <a href="#" class="view-all ">View all<span class="fa fa-arrow-right"></span></a>
                            </li>
                        </ul>
                    </aside><!-- .specials-->
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="clearfix"></div>
        </div><!-- .content -->
    </div>
</section><!-- #main -->
