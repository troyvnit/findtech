</head>
<body class="fixed-header">
    <div class="page-box">
        <div class="page-box-content">
            <header class="header">
                <div class="header-wrapper">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-6 col-md-2 col-lg-1 logo-box">
                                <div class="logo">
                                    <a href="~/">
                                        <img src="~/img/logo.png" class="logo-img" alt="" height="40">
                                    </a>
                                </div>
                            </div><!-- .logo-box -->
                        </div><!--.row -->
                    </div>
                </div><!-- .header-wrapper -->
            </header><!-- .header -->
            @RenderBody()
        </div><!-- .page-box-content -->
    </div><!-- .page-box -->
    <div id="imgWindow">
        <div id="imgBrowser"></div>
        <script>
            $("#imgBrowser").kendoImageBrowser({
                transport: {
                    read: "/ImageBO/Read",
                    destroy: {
                        url: "/ImageBO/Destroy",
                        type: "POST"
                    },
                    create: {
                        url: "/ImageBO/Create",
                        type: "POST"
                    },
                    thumbnailUrl: "/ImageBO/Thumbnail",
                    uploadUrl: "/ImageBO/Upload",
                    imageUrl: "/ImageBO/Image?path={0}"
                }
            });
        </script>
    </div>
    <footer id="footer">
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="copyright col-xs-12 col-sm-3 col-md-3">
                        Copyright © ifind.vn, 2014
                    </div>

                    <div class="phone col-xs-6 col-sm-3 col-md-3">
