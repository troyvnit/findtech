@model FindTech.Web.Areas.BO.Models.ContentSectionBOViewModel
@{
    var collapseId = DateTime.Now.Ticks;
    Layout = null;
}
<div class="panel panel-info active">
    <div class="panel-heading" role="tab" id="heading-@collapseId">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapse-@collapseId">
                @(string.IsNullOrEmpty(Model.SectionTitle) ? "New Content Section" : Model.SectionTitle)
            </a>
        </h4>
    </div>
    <div id="collapse-@collapseId" class="panel-collapse collapse in">
        <div class="panel-body">
            <form role="form" method="POST" action="@Url.Action("Create", "ContentSectionBO")">
                <input type="hidden" name="ArticleId" value="@Model.ArticleId" />
                <input type="hidden" name="ContentSectionId" value="@Model.ContentSectionId" />
                <div class="row">
                    <div class="col-xs-12 col-md-4">
                        <div class="form-group">
                            <label for="SectionTitle">Tiêu đề</label>
                            <input type="text" class="form-control" name="SectionTitle" placeholder="Nhập tiêu đề" value="@Model.SectionTitle">
                        </div>
                        <div class="form-group">
                            <label for="SectionDescription">Mô tả</label>
                            <textarea class="form-control" name="SectionDescription" style="height:200px" placeholder="Mô tả ngắn">@Model.SectionDescription</textarea>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-8">
                        <div class="form-group">
                            <label for="SectionContent">Nội dung bài viết</label>
                            <textarea class="editor" name="SectionContent" rows="10" cols="30" style="width:100%;height:286px">@Html.Raw(Model.SectionContent)</textarea>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-12">
                        <div class="carousel-box load overflow" data-carousel-height="100">
                            <div class="title-box">
                                <a class="next" href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="9px" height="16px" viewBox="0 0 9 16" enable-background="new 0 0 9 16" xml:space="preserve">
                                    <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#fcfcfc" points="1,0.001 0,1.001 7,8 0,14.999 1,15.999 9,8 "></polygon>
			</svg>
                                </a>
                                <a class="prev" href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="9px" height="16px" viewBox="0 0 9 16" enable-background="new 0 0 9 16" xml:space="preserve">
                                    <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#fcfcfc" points="8,15.999 9,14.999 2,8 9,1.001 8,0.001 0,8 "></polygon>
			</svg>
                                </a>
                                <h2 class="title">Images</h2>
                            </div>

                            <div class="clearfix"></div>

                            <div class="row">
                                <div class="carousel gallery">
                                    <div class="col-sm-4 col-md-2">
                                        <a class="gallery-images" rel="fancybox" href="http://template.progressive.itembridge.com/2.2.4/img/content/office-1.jpg">
                                            <img src="http://template.progressive.itembridge.com/2.2.4/img/content/office-1-270.jpg" width="270" height="135" alt="">
                                            <span class="bg-images"><i class="fa fa-search"></i></span>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-md-2">
                                        <a class="gallery-images" rel="fancybox" href="http://template.progressive.itembridge.com/2.2.4/img/content/office-2.jpg">
                                            <img src="http://template.progressive.itembridge.com/2.2.4/img/content/office-2-270.jpg" width="270" height="135" alt="">
                                            <span class="bg-images"><i class="fa fa-search"></i></span>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-md-2">
                                        <a class="gallery-images" rel="fancybox" href="http://template.progressive.itembridge.com/2.2.4/img/content/office-3.jpg">
                                            <img src="http://template.progressive.itembridge.com/2.2.4/img/content/office-3-270.jpg" width="270" height="135" alt="">
                                            <span class="bg-images"><i class="fa fa-search"></i></span>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-md-2">
                                        <a class="gallery-images" rel="fancybox" href="http://template.progressive.itembridge.com/2.2.4/img/content/office-4.jpg">
                                            <img src="http://template.progressive.itembridge.com/2.2.4/img/content/office-4-270.jpg" width="270" height="135" alt="">
                                            <span class="bg-images"><i class="fa fa-search"></i></span>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-md-2">
                                        <a class="gallery-images" rel="fancybox" href="http://template.progressive.itembridge.com/2.2.4/img/content/office-5.jpg">
                                            <img src="http://template.progressive.itembridge.com/2.2.4/img/content/office-5-270.jpg" width="270" height="135" alt="">
                                            <span class="bg-images"><i class="fa fa-search"></i></span>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-md-2">
                                        <a class="gallery-images" rel="fancybox" href="http://template.progressive.itembridge.com/2.2.4/img/content/office-6.jpg">
                                            <img src="http://template.progressive.itembridge.com/2.2.4/img/content/office-6-270.jpg" width="270" height="135" alt="">
                                            <span class="bg-images"><i class="fa fa-search"></i></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-12 text-right">
                        <button type="button" class="btn btn-success add-image">Upload Image</button>
                        <button type="button" class="btn btn-primary" onclick="submitContentSection($(this).closest('form'))">Save</button>
                        <button type="button" class="btn btn-danger" onclick="deleteContentSection($(this).closest('form'))">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        
    });
</script>